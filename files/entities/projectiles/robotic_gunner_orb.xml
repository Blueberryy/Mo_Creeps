<Entity 
  name="$projectile_default" 
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
    		gravity_y="0"
			air_friction="-0.1"
			mass="0.05"
			>
    	</VelocityComponent> 
	</Base>
	
	<HomingComponent
		_enabled="1"
		target_tag="player_unit"
		homing_targeting_coeff="80.0"
		homing_velocity_multiplier="1"
		detect_distance="600"
		>
	</HomingComponent>

  <ProjectileComponent
    _enabled="1" 
	lob_min="0.8"
  	lob_max="1.0"
  	speed_min="160"
  	speed_max="170"
    direction_random_rad="0.5"
    die_on_low_velocity="0"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
	explosion_dont_damage_shooter="1"
    friendly_fire="1"
    damage="0.3"
    velocity_sets_scale="0"
    on_collision_die="1"
    lifetime="120"
    collide_with_entities="1"
    collide_with_tag="player_unit" >
    <config_explosion
      never_cache="1" 
      camera_shake="0.5" 
      explosion_radius="1" 
			explosion_sprite="data/particles/explosion_016_plasma_red.xml" 
      explosion_sprite_lifetime="0.0" 
	  ray_energy="10000"
      hole_destroy_liquid="1" 
      hole_enabled="1" 
	  damage = "0.5"
      hole_image="data/temp/explosion_hole.png"
	  explosion_sprite_emissive="1"
	  explosion_sprite_additive="1"
      particle_effect="0" 
      damage_mortals="1"
	  physics_explosion_power.min="0" 
      physics_explosion_power.max="0"
	  physics_throw_enabled="0"
      shake_vegetation="1"  
      sparks_enabled="0" 
      light_fade_time="1.2" 
	  light_r="225"
	  light_g="25"
      light_b="180"
      stains_enabled="1" 
      stains_image="data/temp/explosion_stain.png" >
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="mods/mo_creeps/files/projectiles_gfx/orb_light_red.xml" 
    next_rect_animation="" 
    offset_x="5" 
    offset_y="5" 
    rect_animation="fireball" 
	emissive="1"
    additive="1"
     
	update_transform_rotation="0"
	>
  </SpriteComponent>
  
  <LightComponent 
    _enabled="1" 
    radius="50" 
    r="200"
    g="20"
    b="20">
  </LightComponent>
	
	<LuaComponent
		script_source_file="data/entities/animals/boss_musical_ghost/boss_musical_delayed_pointer.lua"
		execute_every_n_frame="2"
		execute_times="1"
		>
	</LuaComponent>
  
	<AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		event_root="projectiles/orb_poly" >
	</AudioComponent>
	
	<AudioLoopComponent
		file="data/audio/Desktop/projectiles.bank"
		event_name="projectiles/magic_orb/loop"
		auto_play="1">
	</AudioLoopComponent>
	
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/mo_creeps/files/entities/projectiles/forsaken_eye_orb.xml"
		>
	</VariableStorageComponent>
</Entity>