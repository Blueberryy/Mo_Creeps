<Entity 
  name="$projectile_default" 
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
    		gravity_y="100"
			mass="0.09"
			>
    	</VelocityComponent> 
	</Base>

  <ProjectileComponent 
    _enabled="1" 
  	lob_min="0.8"
  	lob_max="1.0"
  	speed_min="160"
  	speed_max="170"
    die_on_low_velocity="1"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
	explosion_dont_damage_shooter="1"
	die_on_liquid_collision="1"
    damage="0"
    on_collision_die="1"
    lifetime="60"
	muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_launcher_large.xml"
	shoot_light_flash_r="10"
    shoot_light_flash_g="140"
    shoot_light_flash_b="255"
    shoot_light_flash_radius="150"
	knockback_force="1.5"
	>
	<damage_by_type
		projectile="0.25"
		>
	</damage_by_type>
    <config_explosion
      never_cache="1" 
      camera_shake="7.5" 
      explosion_radius="15" 
      explosion_sprite="data/particles/explosion_040_poof.xml" 
      explosion_sprite_lifetime="0" 
      create_cell_probability="100" 
      create_cell_material="fire" 
      hole_destroy_liquid="0"
	  load_this_entity="data/entities/particles/particle_explosion/main_gunpowder_small.xml"
      hole_enabled="1" 
	  damage="2"
	  ray_energy="50000"
      hole_image="data/temp/explosion_hole.png" 
      particle_effect="1" 
      damage_mortals="1"
	  physics_explosion_power.min="0.6" 
      physics_explosion_power.max="0.9" 
      physics_throw_enabled="1" 
      shake_vegetation="1" 
      sparks_enabled="1" 
      sparks_count_max="100" 
      sparks_count_min="50"
      light_fade_time="0.8" 
      stains_enabled="1" 
      stains_image="data/temp/explosion_stain.png" 
	  audio_event_name="explosions/fireball"
	  >
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="mods/mo_creeps/files/projectiles_gfx/fireball_alt_water.xml" 
    next_rect_animation="" 
    offset_x="16" 
    offset_y="12" 
    rect_animation=""
	additive="1"
     >
  </SpriteComponent>

	<!-- VFX -->
	<!-- halo -->
	<SpriteParticleEmitterComponent
		_tags="enabled_in_world,enabled_in_hand"
		sprite_file="data/particles/waterstone_bubble.xml"
		delay="0"
		lifetime="0.35"
		color.r="1" color.g="1" color.b="1" color.a="0.5"
		color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-1.5"
		render_back="1"
		velocity.x="0" velocity.y="0"
		gravity.x="0" gravity.y="10"
		velocity_slowdown="0"
		rotation="0"
		angular_velocity="0"
		use_velocity_as_rotation="0"
		scale.x="1" scale.y="1"
		scale_velocity.x="0" scale_velocity.y="0"
		emission_interval_min_frames="2"
		emission_interval_max_frames="2"
		count_min="1" count_max="1"
		randomize_rotation.min="0"
		randomize_rotation.max="0"
		randomize_position.min_x="-1.5"
		randomize_position.max_x="1.5"
		randomize_position.min_y="-1.5"
		randomize_position.max_y="1.5"
		>
	</SpriteParticleEmitterComponent>
	<!-- drops -->
	<SpriteParticleEmitterComponent
		_tags="enabled_in_world,enabled_in_hand"
		sprite_file="data/particles/waterstone_drop.xml"
		delay="0"
		lifetime="0.5"
		color.r="1" color.g="1" color.b="1" color.a="1"
		color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-0.5"
		render_back="0"
		velocity.x="0" velocity.y="0"
		velocity_always_away_from_center="10"
		gravity.x="0" gravity.y="0"
		velocity_slowdown="0"
		rotation="0"
		angular_velocity="0"
		use_velocity_as_rotation="0"
		scale.x="1" scale.y="1"
		scale_velocity.x="0" scale_velocity.y="0"
		emission_interval_min_frames="2"
		emission_interval_max_frames="4"
		count_min="1" count_max="1"
		randomize_rotation.min="-3.14"
		randomize_rotation.max="3.14"
		randomize_position.min_x="-1.5"
		randomize_position.max_x="1.5"
		randomize_position.min_y="-1.5"
		randomize_position.max_y="1.5"
		>
	</SpriteParticleEmitterComponent>

	<!-- sweat -->
	<ParticleEmitterComponent 
		_tags="enabled_in_world,enabled_in_hand"
		emitted_material_name="water"
		fade_based_on_lifetime="0"
		x_pos_offset_min="-2"
		x_pos_offset_max="2"
		y_pos_offset_min="0"
		y_pos_offset_max="4"
		x_vel_min="-5"
		x_vel_max="15"
		y_vel_min="-5"
		y_vel_max="5"
		area_circle_radius.min="5"
		area_circle_radius.max="5"
		velocity_always_away_from_center="10"
		gravity.y="35"
		friction="0.1"
		airflow_force="0.9"
		airflow_time="0.101"
		airflow_scale="0.81"
		count_min="1"
		count_max="4"
		lifetime_min="1.0"
		lifetime_max="5.0"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		collide_with_grid="1"
		render_on_grid="1"
		emission_interval_min_frames="8"
		emission_interval_max_frames="40"
		is_emitting="1" >
	</ParticleEmitterComponent>
	<ParticleEmitterComponent 
		_tags="enabled_in_world,enabled_in_hand"
		emitted_material_name="plasma_fading"
		fade_based_on_lifetime="0"
		x_pos_offset_min="0"
		x_pos_offset_max="0"
		y_pos_offset_min="0"
		y_pos_offset_max="0"
		x_vel_min="-5"
		x_vel_max="15"
		y_vel_min="-5"
		y_vel_max="5"
		area_circle_radius.min="5"
		area_circle_radius.max="5"
		velocity_always_away_from_center="10"
		gravity.y="35"
		friction="0.1"
		airflow_force="0.9"
		airflow_time="0.101"
		airflow_scale="0.81"
		count_min="1"
		count_max="4"
		lifetime_min="1.0"
		lifetime_max="5.0"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		collide_with_grid="1"
		render_on_grid="1"
		emission_interval_min_frames="12"
		emission_interval_max_frames="60"
		is_emitting="1" >
	</ParticleEmitterComponent>

    <LightComponent 
        _enabled="1" 
        radius="150" >
    </LightComponent>

	<MagicConvertMaterialComponent
		kill_when_finished="0"
		extinguish_fire="1"
		is_circle="1"
		loop="1"
		radius="15" >
	</MagicConvertMaterialComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="projectiles/fireball">
  </AudioComponent>
  
  <VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/fireball.xml"
		>
	</VariableStorageComponent>

</Entity>

