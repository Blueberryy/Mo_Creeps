<Entity 
  name="$projectile_default" 
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
    		gravity_y="0"
			air_friction="0"
			mass="0.05"
			>
    	</VelocityComponent> 
	</Base>
	
	<HomingComponent
		target_tag="player_unit"
		homing_targeting_coeff="3.0"
		homing_velocity_multiplier="1"
		detect_distance="400"
		>
	</HomingComponent>

  <ProjectileComponent 
    _enabled="1" 
	lob_min="0.8"
  	lob_max="1.0"
  	speed_min="350"
  	speed_max="350"
    die_on_low_velocity="0"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
	explosion_dont_damage_shooter="1"
    damage="0.0"
    on_collision_die="1"
    lifetime="100" 
	knockback_force="1.0"
    penetrate_entities="1"
    collide_with_world="10"
    penetrate_world="1"
    spawn_entity="mods/mo_creeps/files/entities/projectiles/boss_music_delayed_attack_warning.xml"
	>
    <config_explosion
      never_cache="1" 
      camera_shake="0.5" 
      explosion_radius="1" 
      explosion_sprite="" 
      explosion_sprite_lifetime="0.0" 
      create_cell_probability="0" 
      create_cell_material="plasma_fading_green" 
	  ray_energy="10"
      hole_destroy_liquid="1" 
      hole_enabled="1" 
	  damage = "0.0"
      hole_image="data/temp/explosion_hole.png"
	  explosion_sprite_emissive="1"
	  explosion_sprite_additive="1"
      particle_effect="0" 
      damage_mortals="0"
	  physics_explosion_power.min="0" 
      physics_explosion_power.max="0"
	  physics_throw_enabled="0"
      shake_vegetation="0"  
      sparks_enabled="0" 
	  spark_material="plasma_fading_pink"
      sparks_count_max="16" 
      sparks_count_min="12"
      light_fade_time="0.2" 
	  light_r="0"
	  light_g="0"
      light_b="0"
      stains_enabled="0" 
      stains_image="data/temp/explosion_stain.png" >
    </config_explosion>
  </ProjectileComponent>
	
	<SpriteParticleEmitterComponent
		sprite_file="data/particles/note_$[1-4].xml"
		delay="0"
		lifetime="1.5"
		emissive="1"
		additive="1"
		color.r="0.6" color.g="1" color.b="0.6" color.a="0.6"
		color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-1"
		velocity.x="0" velocity.y="0"
		gravity.x="0" gravity.y="0"
		velocity_slowdown="0"
		rotation="0"
		angular_velocity="0"
		use_velocity_as_rotation="0"
		scale.x="1" scale.y="1"
		scale_velocity.x="0" scale_velocity.y="0"
		emission_interval_min_frames="1"
		emission_interval_max_frames="3"
		count_min="1" count_max="1"
		randomize_rotation.min="-0.3415"
		randomize_rotation.max="0.3415"
		randomize_angular_velocity.min="-0.1415"
		randomize_angular_velocity.max="0.1415"
		randomize_velocity.min_x="-5"
		randomize_velocity.max_x="5"
		randomize_velocity.min_y="-5"
		randomize_velocity.max_y="5"
		entity_velocity_multiplier="0.1"
	>
	</SpriteParticleEmitterComponent>
  
  <LightComponent 
    _enabled="1" 
    radius="150" 
    r="30"
    g="90"
    b="30">
  </LightComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/mo_creeps/files/entities/projectiles/boss_music_delayed_attack_start.xml"
		>
	</VariableStorageComponent>
 </Entity>