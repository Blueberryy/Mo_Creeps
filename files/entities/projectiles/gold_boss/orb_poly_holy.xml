<Entity 
  name="$projectile_default" 
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
    		gravity_y="0"
			air_friction="-0.1"
			mass="2"
			>
    	</VelocityComponent> 
	</Base>
	
	<HomingComponent
		target_tag="prey"
		homing_targeting_coeff="3"
		detect_distance="800"
		homing_velocity_multiplier="0.99"
		>
	</HomingComponent>

  <ProjectileComponent 
    _enabled="1" 
	lob_min="0.8"
  	lob_max="1.0"
  	speed_min="260"
  	speed_max="320"
    direction_random_rad="2.56"
    die_on_low_velocity="0"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
	explosion_dont_damage_shooter="1"
    damage="0.5"
    on_collision_die="1"
    lifetime="350"
	die_on_liquid_collision="1"
    >
    <config_explosion
        never_cache="1" 
		damage="0"
		camera_shake="4.5" 
		explosion_radius="9" 
      explosion_sprite="data/particles/explosion_016_plasma_pink.xml" 
		explosion_sprite_emissive="1"
		explosion_sprite_additive="1"
		explosion_sprite_lifetime="0" 
		create_cell_material="magic_liquid_polymorph"
		create_cell_probability="500"  
		hole_destroy_liquid="0" 
		hole_enabled="1" 
		hole_image="data/temp/explosion_hole.png" 
		audio_event_name="explosions/tnt"
		particle_effect="0" 
		damage_mortals="1" 
		physics_explosion_power.max="0.2" 
		physics_explosion_power.max="0.4" 
		physics_throw_enabled="1" 
		shake_vegetation="1" 
		sparks_count_max="200" 
		sparks_count_min="180" 
		sparks_enabled="1" 
		spark_material="magic_liquid_polymorph"
		stains_enabled="1" 
		stains_radius="9"
        audio_enabled="1" >
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="data/projectiles_gfx/polyorb.xml" 
    next_rect_animation="" 
    offset_x="0" 
    offset_y="0" 
    rect_animation="fireball" 
	emissive="1"
    additive="1"
     
	update_transform_rotation="0"
	>
  </SpriteComponent>
  
  <LightComponent 
    _enabled="1" 
    radius="150" 
    r="220"
    g="18"
    b="180">
  </LightComponent>
  
  <SpriteParticleEmitterComponent
    sprite_file="data/particles/shine_03.xml"
    delay="0"
    lifetime="2"
    color.r="1" color.g="1" color.b="1" color.a="1"
    color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-1"
    velocity.x="0" velocity.y="0"
    gravity.x="0" gravity.y="30"
    velocity_slowdown="0"
    rotation="0"
    angular_velocity="0"
    use_velocity_as_rotation="0"
    scale.x="1" scale.y="1"
    scale_velocity.x="0" scale_velocity.y="0"
    emission_interval_min_frames="1"
    emission_interval_max_frames="2"
    count_min="1" count_max="1"
    randomize_rotation.min="-3.1415"
    randomize_rotation.max="3.1415"
	randomize_angular_velocity.min="-15"
	randomize_angular_velocity.max="15"
	randomize_velocity.min_x="-5"
	randomize_velocity.max_x="5"
	randomize_velocity.min_y="-5"
	randomize_velocity.max_y="5"
    >
  </SpriteParticleEmitterComponent>
  
  <ParticleEmitterComponent 
    emitted_material_name="magic_liquid_polymorph"
    count_min="499"
    count_max="500"
    offset.x="0"
    offset.y="5"
    x_pos_offset_min="-1"
    y_pos_offset_min="-1"
    x_pos_offset_max="1"
    y_pos_offset_max="1"
    x_vel_min="-350"
    x_vel_max="350"
    y_vel_min="-350"
    y_vel_max="350"
    count_min="500"
    count_max="500"
    lifetime_min="1"
    lifetime_max="3"
    create_real_particles="1"
    emit_cosmetic_particles="0"
    emission_interval_min_frames="5"
    emission_interval_max_frames="8"
    is_emitting="1" >
  </ParticleEmitterComponent>

	<MaterialInventoryComponent 
		_enabled="1" 
		drop_as_item="0" 
		on_death_spill="1"
		leak_on_damage_percent="0"
		leak_pressure_min="0.5"
		leak_pressure_max="1.0"
		b2_force_on_leak="0.25"
		kill_when_empty="1"
		>
		<count_per_material_type>
			<Material material="magic_liquid_polymorph" count="500"  />
		</count_per_material_type>
	</MaterialInventoryComponent>

	<AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		event_root="projectiles/orb_poly" >
	</AudioComponent>
	
	<AudioLoopComponent
		file="data/audio/Desktop/projectiles.bank"
		event_name="projectiles/magic_orb/loop"
		auto_play="1">
	</AudioLoopComponent>
	
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/mo_creeps/files/entities/projectiles/gold_boss/orb_poly_holy.xml"
		>
	</VariableStorageComponent>
</Entity>