<Entity 
  name="$projectile_default" 
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
    		gravity_y="0"
			air_friction="0"
			mass="0.03"
			>
    	</VelocityComponent> 
	</Base>

	<HomingComponent
		target_tag="prey"
		homing_targeting_coeff="10"
		detect_distance="300"
		homing_velocity_multiplier="0.94"
		>
	</HomingComponent>

  <ProjectileComponent 
    _enabled="1" 
  	speed_min="250"
  	speed_max="250"
    die_on_low_velocity="0"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
	  explosion_dont_damage_shooter="1"
    damage="0.8"
    on_collision_die="1"
	collide_with_entities="0"
    lifetime="200"
	shoot_light_flash_r="190"
    shoot_light_flash_g="40"
    shoot_light_flash_b="245"
    shoot_light_flash_radius="140" 
	>
    <config_explosion
      never_cache="1" 
      camera_shake="0"
	  damage="0"
      explosion_radius="1" 
      explosion_sprite="data/particles/darkflame.xml"
      explosion_sprite_lifetime="0.0" 
      create_cell_probability="0" 
      create_cell_material="" 
	  ray_energy="0"
      hole_destroy_liquid="0" 
      hole_enabled="0" 
      hole_image="" 
      particle_effect="0" 
      damage_mortals="0"
	  physics_explosion_power.min="0"
      physics_explosion_power.max="0" 
      physics_throw_enabled="0" 
      shake_vegetation="1" 
      sparks_enabled="0" 
      sparks_count_max="0" 
      sparks_count_min="0"
      light_fade_time="0.1" 
	  light_enabled="1"
	  light_r="80"
	  light_g="5"
	  light_b="120"
	  light_radius_coeff="64"
      stains_enabled="0" 
      stains_image="data/temp/explosion_stain.png" >
    </config_explosion>
  </ProjectileComponent>
  
	<SpriteParticleEmitterComponent
		sprite_file="mods/mo_creeps/files/particles/fire_large_purple.xml"
		delay="0"
		lifetime="0"
		emissive="1"
		additive="1"
		color.r="1" color.g="1" color.b="1" color.a="1"
		color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-2"
		velocity.x="0" velocity.y="0"
		gravity.x="0" gravity.y="10"
		velocity_slowdown="0"
		rotation="0"
		angular_velocity="0"
		use_velocity_as_rotation="0"
		scale.x="1" scale.y="1"
		scale_velocity.x="0" scale_velocity.y="0"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		count_min="2" count_max="4"
		randomize_rotation.min="-0.3415"
		randomize_rotation.max="0.3415"
		randomize_angular_velocity.min="-1.3415"
		randomize_angular_velocity.max="1.3415"
		randomize_position.min_x="-6"
		randomize_position.max_x="6"
		randomize_position.min_y="-6"
		randomize_position.max_y="6"
		randomize_velocity.min_x="-10"
		randomize_velocity.max_x="10"
		randomize_velocity.min_y="-10"
		randomize_velocity.max_y="10"
		is_emitting="1"
		>
	</SpriteParticleEmitterComponent>

	<LuaComponent 
		_enabled="1" 
		script_source_file="mods/mo_creeps/files/scripts/projectiles/darkflame_homing.lua" 
		execute_every_n_frame="3">
	</LuaComponent>

	<LightComponent 
		_enabled="1" 
		radius="64" 
		r="80"
		g="5"
		b="120"
		fade_out_time="0.5"
		>
	</LightComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="projectiles/rocket">
  </AudioComponent>
  
  <VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/darkflame.xml"
		>
	</VariableStorageComponent>

</Entity>

